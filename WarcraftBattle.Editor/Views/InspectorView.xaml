<UserControl x:Class="WarcraftBattle.Editor.Views.InspectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:properties="clr-namespace:WarcraftBattle.Editor.Properties"
             Background="{StaticResource Brush.Panel.Background}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="{x:Static properties:StringResources.PanelInspectorTitle}"
                   FontWeight="Bold"
                   Margin="12,12,12,6" />
        <StackPanel Grid.Row="1" Margin="12,0,12,12">
            <TextBlock Text="{x:Static properties:StringResources.MapSizeTitle}" />
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <TextBlock Text="{x:Static properties:StringResources.MapWidthLabel}" Width="70" />
                <TextBox Text="{Binding MapWidth, UpdateSourceTrigger=PropertyChanged}" Width="80" />
                <TextBlock Text="{x:Static properties:StringResources.MapHeightLabel}" Width="70" Margin="12,0,0,0" />
                <TextBox Text="{Binding MapHeight, UpdateSourceTrigger=PropertyChanged}" Width="80" />
            </StackPanel>
        </StackPanel>
        <TextBlock Grid.Row="2"
                   Text="{x:Static properties:StringResources.PanelHierarchyPlaceholder}"
                   Margin="12" />
    </Grid>
</UserControl>
