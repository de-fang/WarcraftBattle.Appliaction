<UserControl x:Class="WarcraftBattle.Editor.Views.InspectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:properties="clr-namespace:WarcraftBattle.Editor.Properties"
             Background="{StaticResource Brush.Panel.Background}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="{x:Static properties:StringResources.PanelInspectorPlaceholder}"
                   Margin="12" />
        <Separator Grid.Row="1" />
        <TextBlock Grid.Row="2" Text="{x:Static properties:StringResources.PanelHierarchyPlaceholder}"
                   Margin="12" />
    </Grid>
</UserControl>
