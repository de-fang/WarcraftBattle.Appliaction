<UserControl x:Class="WarcraftBattle.Editor.Views.ObjectEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WarcraftBattle.Editor.ViewModels"
             xmlns:properties="clr-namespace:WarcraftBattle.Editor.Properties"
             Background="{StaticResource Brush.Window.Background}">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="3" Text="{x:Static properties:StringResources.ObjectEditorTitle}"
                   FontWeight="Bold" FontSize="16" Margin="0,0,0,12" />

        <ListBox Grid.Row="1" Grid.Column="0"
                 ItemsSource="{Binding Categories}"
                 SelectedItem="{Binding SelectedCategory}"
                 DisplayMemberPath="Name" />

        <ListBox Grid.Row="1" Grid.Column="1"
                 ItemsSource="{Binding Items}"
                 SelectedItem="{Binding SelectedItem}"
                 DisplayMemberPath="Name" />

        <Border Grid.Row="1" Grid.Column="2" Background="{StaticResource Brush.Panel.Background}" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="{x:Static properties:StringResources.ObjectEditorPreview}" FontWeight="SemiBold" />
                <Border Grid.Row="1" Background="{StaticResource Brush.Control.Background}" Height="180" Margin="0,6,0,12">
                    <Image Source="{Binding SelectedItem.PreviewImage}" Stretch="Uniform" />
                </Border>
                <ContentControl Grid.Row="2" Content="{Binding SelectedItem}">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type vm:UnitEntryViewModel}">
                            <StackPanel>
                                <TextBlock Text="{x:Static properties:StringResources.ObjectEditorDetails}" FontWeight="SemiBold" Margin="0,0,0,6" />
                                <TextBlock Text="{x:Static properties:StringResources.ObjectNameLabel}" />
                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.ObjectImageLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.UnitCostLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding Cost, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.UnitHpLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding Hp, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.UnitDamageLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding Damage, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.UnitRangeLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding Range, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:BuildingEntryViewModel}">
                            <StackPanel>
                                <TextBlock Text="{x:Static properties:StringResources.ObjectEditorDetails}" FontWeight="SemiBold" Margin="0,0,0,6" />
                                <TextBlock Text="{x:Static properties:StringResources.ObjectNameLabel}" />
                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.ObjectImageLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.BuildingWidthLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.BuildingHeightLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.BuildingHpLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding Hp, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:ObstacleEntryViewModel}">
                            <StackPanel>
                                <TextBlock Text="{x:Static properties:StringResources.ObjectEditorDetails}" FontWeight="SemiBold" Margin="0,0,0,6" />
                                <TextBlock Text="{x:Static properties:StringResources.ObjectNameLabel}" />
                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.ObjectImageLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.ObstacleWidthLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.ObstacleHeightLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" />
                                <CheckBox Content="{x:Static properties:StringResources.ObstacleCollisionLabel}" IsChecked="{Binding HasCollision}" Margin="0,8,0,0" />
                            </StackPanel>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:ProjectileEntryViewModel}">
                            <StackPanel>
                                <TextBlock Text="{x:Static properties:StringResources.ObjectEditorDetails}" FontWeight="SemiBold" Margin="0,0,0,6" />
                                <TextBlock Text="{x:Static properties:StringResources.ObjectNameLabel}" />
                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.ObjectImageLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.ProjectileSpeedLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding Speed, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Text="{x:Static properties:StringResources.ProjectileScaleLabel}" Margin="0,8,0,0" />
                                <TextBox Text="{Binding Scale, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
