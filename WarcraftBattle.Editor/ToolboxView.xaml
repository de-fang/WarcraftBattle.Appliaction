<UserControl x:Class="WarcraftBattle.Editor.ToolboxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:res="clr-namespace:WarcraftBattle.Editor.Properties">
    <Border Background="{StaticResource Editor.Panel.Background}" BorderBrush="{StaticResource Editor.Border.Base}" BorderThickness="1">
        <TabControl>
            <TabItem Header="{x:Static res:Strings.ToolboxPalette}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <TextBlock Text="{x:Static res:Strings.PlacementMode}" FontWeight="Bold" Margin="0,0,0,6" />
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Button Content="{x:Static res:Strings.ModeSelect}" Width="70" Margin="0,0,6,0" cal:Message.Attach="Map.SetPlacementMode(Select)" />
                            <Button Content="{x:Static res:Strings.ModeBuilding}" Width="70" Margin="0,0,6,0" cal:Message.Attach="Map.SetPlacementMode(Building)" IsEnabled="{Binding Map.CanPlaceBuildings}" />
                            <Button Content="{x:Static res:Strings.ModeObstacle}" Width="70" cal:Message.Attach="Map.SetPlacementMode(Obstacle)" IsEnabled="{Binding Map.CanPlaceObstacles}" />
                        </StackPanel>

                        <TextBlock Text="{x:Static res:Strings.BuildingList}" FontWeight="Bold" Margin="0,8,0,6" />
                        <ListBox ItemsSource="{Binding Map.BuildingOptions}"
                                 SelectedItem="{Binding Map.SelectedBuilding}"
                                 DisplayMemberPath="Name"
                                 Height="180" />

                        <TextBlock Text="{x:Static res:Strings.Team}" FontWeight="Bold" Margin="0,8,0,4" />
                        <ComboBox ItemsSource="{Binding Map.TeamOptions}" SelectedItem="{Binding Map.SelectedTeam}" />

                        <TextBlock Text="{x:Static res:Strings.ObstacleList}" FontWeight="Bold" Margin="0,12,0,6" />
                        <ListBox ItemsSource="{Binding Map.ObstacleOptions}"
                                 SelectedItem="{Binding Map.SelectedObstacle}"
                                 DisplayMemberPath="Name"
                                 Height="180" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{x:Static res:Strings.ToolboxAssets}">
                <StackPanel Margin="8">
                    <TextBlock Text="{x:Static res:Strings.AssetBrowserPlaceholder}" Foreground="{StaticResource Editor.Control.Foreground}" />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Border>
</UserControl>
