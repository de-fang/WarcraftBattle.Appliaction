<Window
    x:Class="WarcraftBattle.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:controls="clr-namespace:WarcraftBattle.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WarcraftBattle.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WarcraftBattle.ViewModels"
    Title="{Binding Engine.GameTitle}"
    Width="1280"
    Height="800"
    d:DataContext="{d:DesignInstance vm:ShellViewModel}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <local:CooldownToPathConverter x:Key="CooldownToPathConverter" />
        <local:CooldownToGridHeightConverter x:Key="CooldownToGridHeightConverter" />
        <local:InvertBoolConverter x:Key="InvertBoolConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid>
        <controls:GameSurface
            x:Name="GameSurface"
            Engine="{Binding Engine}"
            Visibility="{Binding GameVisibility}" />

        <Grid Visibility="{Binding GameVisibility}">
            <Border
                Height="48"
                Margin="0,15"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                CornerRadius="24"
                Style="{StaticResource vscode.Panel.Style}">
                <StackPanel Margin="20,0" Orientation="Horizontal">
                    <StackPanel
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                              Foreground="{StaticResource GameHighlightBrush}"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="ðŸ’°" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="{StaticResource GameHighlightBrush}">
                            <Run Text="{Binding GoldText}"/>
                        </TextBlock>
                    </StackPanel>

                    <Rectangle
                        Width="1"
                        Height="20"
                        Margin="15,0"
                        Fill="{StaticResource vscode.Brush.Border}" />

                    <StackPanel
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                              Foreground="{StaticResource GameAccentBrush}"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="ðŸ " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold" Foreground="{StaticResource GameAccentBrush}">
                            <Run Text="{Binding PopText}"/>
                        </TextBlock>
                    </StackPanel>

                    <Rectangle
                        Width="1"
                        Height="20"
                        Margin="15,0"
                        Fill="{StaticResource vscode.Brush.Border}" />

                    <StackPanel
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,6,0"
                             Foreground="{StaticResource vscode.Brush.Danger}"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="âš ï¸" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold" Foreground="{StaticResource vscode.Brush.Danger}">
                            <Run Text="{Binding WaveText}"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <StackPanel
                Margin="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    Width="40"
                    Height="40"
                    Margin="5,0"
                    Padding="0"
                    cal:Message.Attach="ToggleSpeed"
                    Content="{Binding SpeedText}"
                    Style="{StaticResource GameButtonStyle}" />
                <Button
                    Width="40"
                    Height="40"
                    Margin="5,0"
                    Padding="0"
                    cal:Message.Attach="GoToMenu"
                    Content="â˜°"
                    FontSize="18"
                    Style="{StaticResource GameButtonStyle}" />
            </StackPanel>

            <Grid Margin="20,0,20,20" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    Width="200"
                    Height="200"
                    Padding="4"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource vscode.Panel.Style}">
                    <Grid>
                        <Border
                            Background="{StaticResource vscode.Brush.Background}"
                            ClipToBounds="True"
                            CornerRadius="8">
                            <controls:MinimapControl Engine="{Binding Engine}" />
                        </Border>
                        <Border
                            BorderBrush="{StaticResource vscode.Brush.Border}"
                            BorderThickness="1"
                            CornerRadius="8"
                            IsHitTestVisible="False" />
                    </Grid>
                </Border>

                <Border
                    Grid.Column="2"
                    Width="320"
                    Height="140"
                    Margin="10,0"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource vscode.Panel.Style}"
                    Visibility="{Binding EntityInfoVisibility}">
                    <Grid>
                        <!-- Single Unit View -->
                        <Grid Margin="10" Visibility="{Binding SingleSelectionVisibility}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- Icon -->
                            <Border Grid.Column="0" 
                                    Width="80" Height="80" 
                                    VerticalAlignment="Top"
                                    BorderBrush="{StaticResource GameAccentBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="2" 
                                    Background="{StaticResource vscode.Brush.Background}">
                                <Image Source="{Binding SelectedUnitIcon}" Stretch="Uniform" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            </Border>

                            <!-- Stats -->
                            <StackPanel Grid.Column="1" Margin="10,0">
                                <TextBlock Text="{Binding SelectedUnitName}" 
                                           FontSize="16" FontWeight="Bold" Foreground="{StaticResource GameAccentBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                                
                                <!-- HP Bar with Damage Trail -->
                                <Grid Height="16" Margin="0,8,0,0">
                                    <Border Background="{StaticResource vscode.Brush.PanelBackgroundTransparent}"/>
                                    <!-- Damage Trail Bar -->
                                    <ProgressBar Value="{Binding SelectedUnitSmoothHp}" Maximum="{Binding SelectedUnitMaxHp}" 
                                                 BorderThickness="0" Background="Transparent" Foreground="{StaticResource vscode.Brush.Warning}" Style="{StaticResource GameProgressBarStyle}"/>
                                    <!-- Main HP Bar -->
                                    <ProgressBar Value="{Binding SelectedUnitHp}" Maximum="{Binding SelectedUnitMaxHp}" 
                                                 BorderThickness="0" Background="Transparent" Foreground="{Binding SelectedUnitHpColor}" Style="{StaticResource GameProgressBarStyle}"/>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="9" Foreground="{StaticResource vscode.Brush.Text}" 
                                               Text="{Binding SelectedUnitHp, StringFormat={}{0:0}}">
                                    </TextBlock>
                                </Grid>

                                <!-- Mana Bar -->
                                <Grid Height="8" Margin="0,2,0,0">
                                    <Border Background="{StaticResource vscode.Brush.PanelBackgroundTransparent}"/>
                                    <ProgressBar Value="{Binding SelectedUnitMana}" Maximum="{Binding SelectedUnitMaxMana}" Style="{StaticResource GameProgressBarStyle}"
                                                 BorderThickness="0" Background="Transparent" Foreground="{StaticResource GameAccentBrush}" />
                                </Grid>

                                <TextBlock Text="{Binding SelectedUnitStats}" 
                                           Margin="0,8,0,0" FontSize="11" Foreground="{StaticResource vscode.Brush.TextDim}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>

                        <!-- Multi Selection View -->
                        <ItemsControl Visibility="{Binding MultiSelectionVisibility}" ItemsSource="{Binding SelectedUnitsList}" Margin="5">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="6" Rows="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="2" Padding="0" Style="{StaticResource GameButtonStyle}" cal:Message.Attach="Execute">
                                        <Grid>
                                            <Image Source="{Binding Icon}" Stretch="Uniform" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                            <Border VerticalAlignment="Bottom" Height="3" Background="{StaticResource vscode.Brush.PanelBackgroundTransparent}">
                                                <Rectangle HorizontalAlignment="Left" Fill="{Binding HpColor}">
                                                    <Rectangle.Width>
                                                        <MultiBinding Converter="{local:PercentToWidthConverter}">
                                                            <Binding Path="HpPct"/>
                                                            <Binding RelativeSource="{RelativeSource AncestorType=Border}" Path="ActualWidth"/>
                                                        </MultiBinding>
                                                    </Rectangle.Width>
                                                </Rectangle>
                                            </Border>
                                            <Border BorderBrush="{StaticResource GameAccentBrush}" BorderThickness="1" Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <Border
                    Grid.Column="4"
                    Width="340"
                    Height="200"
                    Padding="10"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource vscode.Panel.Style}">
                    <Grid>
                        <ItemsControl ItemsSource="{Binding BuildingButtons}" Visibility="{Binding BuildTabVisibility}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4" Rows="3" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Margin="3"
                                        cal:Message.Attach="Execute"
                                        IsEnabled="{Binding CanAfford}"
                                        Style="{StaticResource GameButtonStyle}"
                                        ToolTip="{Binding Name}">
                                        <Grid>
                                            <StackPanel>
                                                <Image
                                                    Margin="2"
                                                    RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                    Source="{Binding Icon}"
                                                    Stretch="Uniform" />
                                                <Border
                                                    Height="16"
                                                    VerticalAlignment="Bottom"
                                                    Background="{StaticResource vscode.Brush.PanelBackgroundTransparent}">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontSize="10"
                                                        Foreground="{StaticResource GameHighlightBrush}"
                                                        Text="{Binding Cost}" />
                                                </Border>
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    FontSize="10"
                                                    Text="{Binding Name}"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                            <Border
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Background="{StaticResource vscode.Brush.PanelBackgroundTransparent}"
                                                CornerRadius="2"
                                                Margin="2">
                                                <TextBlock
                                                    Margin="2,0"
                                                    FontSize="10"
                                                    Foreground="{StaticResource GameHighlightBrush}"
                                                    Text="{Binding Hotkey}" />
                                            </Border>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ItemsControl ItemsSource="{Binding UnitButtons}" Visibility="{Binding UnitTabVisibility}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4" Rows="3" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Margin="3"
                                        cal:Message.Attach="Execute"
                                        IsEnabled="{Binding CanAfford}"
                                        Style="{StaticResource GameButtonStyle}">
                                        <Grid>
                                            <Image
                                                Margin="2"
                                                RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                Source="{Binding Icon}"
                                                Stretch="Uniform" />
                                            <Border
                                                Height="16"
                                                VerticalAlignment="Bottom"
                                                Background="{StaticResource vscode.Brush.PanelBackgroundTransparent}">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="10"
                                                Foreground="{StaticResource GameHighlightBrush}"
                                                Text="{Binding Cost}" />
                                            </Border>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ItemsControl ItemsSource="{Binding SkillButtons}" Visibility="{Binding SkillsVisibility}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4" Rows="3" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Style="{StaticResource GameButtonStyle}"
                                        IsEnabled="{Binding CanCast}"
                                        Margin="3"
                                        cal:Message.Attach="Execute">
                                        <Grid ClipToBounds="True">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Cooldown Mask -->
                                            <Border Grid.Row="0" Grid.RowSpan="2" Background="{StaticResource vscode.Brush.PanelBackgroundTransparent}" VerticalAlignment="Top">
                                                <Border.Height>
                                                    <MultiBinding Converter="{StaticResource CooldownToGridHeightConverter}">
                                                        <Binding Path="CurrentCD"/>
                                                        <Binding Path="MaxCD"/>
                                                        <Binding RelativeSource="{RelativeSource AncestorType=Grid}" Path="ActualHeight"/>
                                                    </MultiBinding>
                                                </Border.Height>
                                            </Border>

                                            <TextBlock
                                                Grid.Row="0" Grid.RowSpan="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                FontWeight="Bold"
                                                Foreground="{StaticResource GameAccentBrush}"
                                                Text="{Binding Name}" />
                                            <TextBlock
                                                Grid.Row="0" Grid.RowSpan="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                Foreground="{StaticResource vscode.Brush.Warning}"
                                                Text="{Binding CurrentCD, StringFormat={}{0:0}}"
                                                Visibility="{Binding IsCoolingDown, Converter={StaticResource BoolToVis}}">
                                            </TextBlock>
                                            <Border
                                                   Grid.Row="0" Grid.RowSpan="2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Background="{StaticResource vscode.Brush.PanelBackgroundTransparent}"
                                                CornerRadius="2"
                                                Margin="2">
                                                <TextBlock
                                                    Margin="2,0"
                                                    FontSize="10"
                                                    Foreground="{StaticResource GameAccentBrush}"
                                                    Text="{Binding Hotkey}" />
                                            </Border>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button
                            Width="80"
                            Height="40"
                            Margin="0,0,-90,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            cal:Message.Attach="UseTower"
                            Background="{StaticResource vscode.Brush.Warning}"
                            Content="é˜²å¾¡å¡”é½å°„"
                            FontSize="12"
                            Style="{StaticResource GameButtonStyle}"
                            Visibility="{Binding TowerBtnVisibility}" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Grid Background="{StaticResource vscode.Brush.BackgroundOverlay}" Visibility="{Binding MenuVisibility}">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="400" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Margin="0,0,80,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontSize="90"
                        FontWeight="Black"
                        Foreground="{StaticResource vscode.Brush.Text}"
                        Text="WARCRAFT">
                    </TextBlock>
                    <TextBlock
                        Margin="5,-10,0,0"
                        FontSize="32"
                        FontWeight="Light"
                        Foreground="{StaticResource GameAccentBrush}"
                        Text="BATTLE TACTICS" />
                    <Rectangle
                        Width="100"
                        Height="2"
                        Margin="5,30,0,0"
                        HorizontalAlignment="Left"
                        Fill="{StaticResource GameAccentBrush}" />
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Button
                        Margin="0,5"
                        cal:Message.Attach="GoToLevelSelect"
                        Content="CAMPAIGN // æˆ˜å½¹æ¨¡å¼"
                        Style="{StaticResource GameButtonStyle}" />
                    <Button
                        Margin="0,5"
                        cal:Message.Attach="GoToShop"
                        Content="ARMORY // ç§‘æŠ€å•†åº—"
                        Style="{StaticResource GameButtonStyle}" />
                    <Button
                        Margin="0,30,0,0"
                        Content="EXIT // é€€å‡ºæ¸¸æˆ"
                        Opacity="0.8"
                        Style="{StaticResource GameButtonStyle}" />
                </StackPanel>
            </Grid>
        </Grid>

        <Grid
            MaxWidth="1000"
            MaxHeight="700"
            Background="{StaticResource vscode.Brush.BackgroundOverlay}"
            Visibility="{Binding LevelSelectVisibility}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="0,0,0,20"
                FontSize="40"
                FontWeight="Thin"
                Foreground="{StaticResource vscode.Brush.Text}"
                Text="SELECT OPERATION" />

            <ScrollViewer
                Grid.Row="1"
                CanContentScroll="False"
                PanningMode="None"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding StageList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Width="220"
                                Height="140"
                                Margin="0,0,20,20"
                                cal:Message.Attach="Execute"
                                IsEnabled="{Binding IsLocked, Converter={StaticResource InvertBoolConverter}}"
                                Style="{StaticResource GameButtonStyle}">
                                <Grid>
                                    <TextBlock
                                        Margin="-10"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        FontSize="60"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource vscode.Brush.TextDim}"
                                        Text="{Binding StageId, StringFormat='0{0}'}" />

                                    <StackPanel
                                        Margin="20,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{StaticResource GameAccentBrush}"
                                            Text="OPERATION" />
                                        <TextBlock
                                            MaxWidth="150"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Text="{Binding Title}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>

                                    <Border Background="{StaticResource vscode.Brush.PanelBackgroundTransparent}" Visibility="{Binding IsLocked, Converter={StaticResource BoolToVis}}">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="24"
                                                Foreground="{StaticResource vscode.Brush.TextDim}"
                                                Text="ðŸ”’" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="10"
                                                FontWeight="Bold"
                                                Foreground="{StaticResource vscode.Brush.TextDim}"
                                                Text="LOCKED" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Button
                Grid.Row="2"
                Width="150"
                Margin="0,20,0,0"
                HorizontalAlignment="Left"
                cal:Message.Attach="GoToMenu"
                Content="BACK TO MENU"
                Style="{StaticResource GameButtonStyle}" />

        </Grid>

        <Grid Background="{StaticResource vscode.Brush.BackgroundOverlay}" Visibility="{Binding ShopVisibility}">
            <Grid Margin="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="0,0,40,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        FontSize="40"
                        FontWeight="Thin"
                        Foreground="{StaticResource vscode.Brush.Text}"
                        Text="ARMORY" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="0,10,0,20"
                        FontSize="16"
                        Foreground="{StaticResource GameHighlightBrush}"
                        Text="{Binding HonorText}" />

                    <Border
                        Grid.Row="2"
                        BorderBrush="{StaticResource vscode.Brush.Border}"
                        BorderThickness="0,1,0,0">
                        <ScrollViewer Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ShopUnitList}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            Height="60"
                                            Margin="0,5"
                                            HorizontalContentAlignment="Stretch"
                                            cal:Message.Attach="Execute"
                                            Style="{StaticResource GameButtonStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <Border
                                                    Grid.Column="0"
                                                    Width="40"
                                                    Height="40"
                                                    Background="{StaticResource vscode.Brush.PanelBackgroundTransparent}"
                                                    ClipToBounds="True"
                                                    CornerRadius="4">
                                                    <Image
                                                        RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                        Source="{Binding Icon}"
                                                        Stretch="Uniform" />
                                                </Border>

                                                <StackPanel
                                                    Grid.Column="1"
                                                    Margin="10,0"
                                                    VerticalAlignment="Center">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="Bold"
                                                        Text="{Binding Name}" />
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="{StaticResource vscode.Brush.TextDim}"
                                                        Text="Unit Class" />
                                                </StackPanel>

                                                <TextBlock
                                                    Grid.Column="2"
                                                    Margin="0,0,15,0"
                                                    VerticalAlignment="Center"
                                                    Foreground="{StaticResource vscode.Brush.TextDim}"
                                                    Text="{Binding LevelText}" />

                                                <Border
                                                    Grid.ColumnSpan="3"
BorderBrush="{StaticResource GameAccentBrush}"
                                                    BorderThickness="2"
                                                    CornerRadius="4"
                                                    Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}" />
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>

                <Border
                    Grid.Column="1"
                    Padding="40"
                    Background="{StaticResource vscode.Brush.PanelBackgroundTransparent_Light}"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            FontSize="32"
                            FontWeight="Bold"
                            Foreground="{StaticResource vscode.Brush.Text}"
                            Text="{Binding UpgradeInfoTitle}" />

                        <ScrollViewer Grid.Row="1" Margin="0,20">
                            <TextBlock
                                FontSize="16"
                                Foreground="{StaticResource vscode.Brush.Text}"
                                LineHeight="24"
                                Text="{Binding UpgradeInfoDesc}"
                                TextWrapping="Wrap" />
                        </ScrollViewer>

                        <StackPanel Grid.Row="2">
                            <TextBlock
                                Margin="0,0,0,20"
                                HorizontalAlignment="Right"
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="{StaticResource GameHighlightBrush}"
                                Text="{Binding UpgradeCostText}" />
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                <Button
                                    Width="200"
                                    Height="50"
                                    Margin="10,0"
                                    cal:Message.Attach="DoUpgrade"
                                    BorderBrush="{StaticResource GameAccentBrush}"
                                    BorderThickness="1"
                                    Content="UPGRADE"
                                    Style="{StaticResource GameButtonStyle}"
                                    Visibility="{Binding UpgradeBtnVisibility}" />
                                <Button
                                    Width="120"
                                    Height="50"
                                    Margin="10,0"
                                    cal:Message.Attach="GoToMenu"
                                    Content="BACK"
                                    Style="{StaticResource GameButtonStyle}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Grid Background="{StaticResource vscode.Brush.BackgroundOverlay}" Visibility="{Binding ResultVisibility}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="80"
                    FontWeight="Black"
                    Foreground="{Binding ResultColor}"
                    Text="{Binding ResultTitle}">
                </TextBlock>
                <TextBlock
                    Margin="0,10,0,60"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    Foreground="{StaticResource vscode.Brush.Text}"
                    Opacity="0.8"
                    Text="{Binding ResultReward}" />

                <StackPanel
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Visibility="{Binding WinButtonsVisibility}">
                    <Button
                        Width="200"
                        Height="60"
                        Margin="10"
                        cal:Message.Attach="NextLevel"
                        Background="{StaticResource GameAccentBrush}"
                        Content="NEXT MISSION"
                        FontWeight="Bold"
                        Foreground="{StaticResource vscode.Brush.Text}"
                        Style="{StaticResource GameButtonStyle}" />
                    <Button
                        Width="150"
                        Height="60"
                        Margin="10"
                        cal:Message.Attach="GoToMenu"
                        Content="MENU"
                        Style="{StaticResource GameButtonStyle}" />
                </StackPanel>

                <StackPanel
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Visibility="{Binding LoseButtonsVisibility}">
                    <Button
                        Width="200"
                        Height="60"
                        Margin="10"
                        cal:Message.Attach="RetryLevel"
                        Background="{StaticResource vscode.Brush.Danger}"
                        Content="RETRY"
                        Style="{StaticResource GameButtonStyle}" />
                    <Button
                        Width="150"
                        Height="60"
                        Margin="10"
                        cal:Message.Attach="GoToMenu"
                        Content="MENU"
                        Style="{StaticResource GameButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
